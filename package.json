{
	"name": "@bitcoinschema/bso-lib",
	"version": "0.1.1",
	"description": "Bitcoin Social transaction creation library",
	"type": "module",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"build": "bun build ./src/index.ts --outdir ./dist --target node && bun run build:types",
		"build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
		"test": "bun test",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"prepublishOnly": "bun run build"
	},
	"peerDependencies": {
		"@bsv/sdk": "^1.10.0",
		"sigma-protocol": "^0.1.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@bsv/sdk": "^1.10.1",
		"@types/bun": "latest",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@bopen-io/templates": "^1.1.6"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/BitcoinSchema/js-bso.git"
	},
	"keywords": [
		"bsv",
		"bsocial",
		"bitcoin",
		"schema",
		"social",
		"transactions"
	],
	"author": "Satchmo",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/BitcoinSchema/js-bso/issues"
	},
	"homepage": "https://github.com/BitcoinSchema/js-bso#readme"
}
